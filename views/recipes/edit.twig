{% extends "./layouts/app.twig" %}

{% block edit %}

    <h1>Edit recipe</h1>

    <form id="create-edit-form" method="POST" action="/recipe/edit&id={{ recipe.id }}">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="{{ recipe.name }}" required>
        
        <label for="type">Type</label>
        <select id="type" name="type" required>
        {% for type in types %}
            <option value="{{ type|lower }}" {% if type|lower == recipe.type %}selected{% endif %}>{{ type }}</option>
        {% endfor %}
        </select>

        <label for="level">Level</label>
        <select id="level" name="level" required>
            {% for difficulty in difficulties %}
                <option value="{{ difficulty|lower }}" {% if difficulty|lower == recipe.level %}selected{% endif %}>{{ difficulty }}</option>
            {% endfor %}
        </select>

        <div id="submit-section">
            <a href="/recipe"class="hover-underline">Back to recepies</a>
            <input id="submit" type="submit" value="Submit">
        </div>
    </form>
    
{% endblock %}